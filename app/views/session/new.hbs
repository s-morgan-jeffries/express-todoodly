<div class="row marketing">
    <form role="form" id="signinform" action="/sessions" method="post" accept-charset="utf-8">
        <input type="hidden" name="_method" value="post">
        {{>shared/csrf}}
        <h1>Sign In</h1>
        <div class="form-group">
            <label for="signinform:username">Email address</label>
            <input type="text" class="form-control" id="signinform:username" name="email" placeholder="Enter email" autofocus/>
        </div>
        {{#if alerts.email}}
            <div class="alert alert-{{alerts.email.type}}">{{alerts.email.msg}}</div>
        {{/if}}
        <div class="form-group">
            <label for="signinform:password">Password</label>
            <input type="password" class="form-control" id="signinform:password" name="password" placeholder="Password" />
        </div>
        {{#if alerts.password}}
            <div class="alert alert-{{alerts.password.type}}">{{alerts.password.msg}}</div>
        {{/if}}
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
